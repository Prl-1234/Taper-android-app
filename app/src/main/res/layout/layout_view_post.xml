<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relLayout1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_pphoto"
                    android:layout_marginTop="20dp"
                    app:civ_border_color="@color/black"
                    android:src="@drawable/ic_action_name"
                    android:layout_marginLeft="25dp"
                    app:civ_border_width="0.5dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_toRightOf="@+id/profile_photo"
                    android:layout_marginLeft="70dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/username"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_ellipse"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:id="@+id/ivEllipses"
                    />


            </RelativeLayout>
            <com.example.taper.Utils.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_image"
                android:layout_below="@+id/relLayout1"
                android:scaleType="fitCenter"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relLayout2"
                android:background="@color/white"
                android:layout_below="@id/post_image">
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:id="@+id/heartLayout"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/image_heart_red"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_heart_red"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/image_heart"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:visibility="visible"
                        android:src="@drawable/ic_heart_white"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/speech_bubble"
                    android:layout_toRightOf="@+id/heartLayout"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_speech_bubble"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relLayout3"
                android:layout_below="@+id/relLayout2"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginBottom="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by Mitch, Mohammed and 30 others"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/imagelikes"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="priyal.s mountains #hills"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@id/imagelikes"
                    android:textSize="18sp"
                    android:id="@+id/image_caption"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all 3 comments"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/image_caption"
                    android:id="@+id/image_comments_link"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 DAYS AGO"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/grey"
                    android:textSize="10sp"
                    android:layout_below="@+id/image_comments_link"
                    android:id="@+id/image_time_posted"/>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
    <include layout="@layout/layout_bottom_navigation"/>

</RelativeLayout>